    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "strict": true,
    "target": "es2020",
    "outDir": "./dist"
